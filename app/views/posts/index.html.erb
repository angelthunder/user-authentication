<h1>Posts#index</h1>

<% if logged_in? %>
  <%= link_to "Create", new_post_path %>
<% end %>

<div>
  <% @posts.each do |post| %>
    <div>
      <h3><%= post.title %> y <span><%= post.author.email %></span></h3>
      <p><%= post.body %></p>
      <p>
        <% if current_user?(post.author) %> 
          <span> | </span>
          <span><%= link_to("edit", edit_post_path(post)) %></span>
        <% end %>
      </p>
    </div>
  <% end %>
</div>
