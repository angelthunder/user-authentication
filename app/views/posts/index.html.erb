<h1>Posts#index</h1>

<div>
  <% @posts.each do |post| %>
    <div>
      <h3>
        <%= post.title %> 
        y <span><%= post.author.email %></span>
      </h3>
      <p><%= post.body %></p>
      <p>
        <span>
          <%= link_to("details", post_path(post)) %> 
        </span> |
        <span>
          <%= link_to("edit", edit_post_path(post)) if current_user?(post.author) %> 
        </span>
      </p>
    </div>
  <% end %>
</div>
