<div>
  <ul>
    <li><%= link_to "Posts", posts_path %></li>
    <li>
      <% if user_logged_in? %>
        <%= form_with url: login_path(session[:user_id]),
          method: :post do %>
          <%= hidden_field_tag :_method, "DELETE" %>

          <%= submit_tag "Logout" %>
        <% end %>
      <% else %>
        <%= link_to "Login", new_login_path %></li>
      <% end %>
    </li>
  </ul>
</div>
